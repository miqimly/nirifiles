// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                       SCREENSHOT SETTINGS                                ║
// ║                      Screen Capture Configuration                        ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                            ANIMATIONS                                    ║
// ║                   Smooth & Buttery Motion Effects                        ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

animations {
    // ─────────────────────────────────────────────────────────────────────
    // Workspace Switching - Ultra Smooth
    // ─────────────────────────────────────────────────────────────────────
    workspace-switch {
        spring damping-ratio=0.88 stiffness=600 epsilon=0.00005
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Opening - Smooth Fade-In
    // ─────────────────────────────────────────────────────────────────────
    window-open {
        duration-ms 200
        curve "ease-out-expo"
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Closing - Quick & Smooth
    // ─────────────────────────────────────────────────────────────────────
    window-close {
        duration-ms 180
        curve "ease-out-cubic"
    }

    // ─────────────────────────────────────────────────────────────────────
    // Horizontal View Movement - Buttery Smooth Scrolling
    // ─────────────────────────────────────────────────────────────────────
    horizontal-view-movement {
        spring damping-ratio=0.90 stiffness=500 epsilon=0.00005
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Movement - Smooth Dragging
    // ─────────────────────────────────────────────────────────────────────
    window-movement {
        spring damping-ratio=0.82 stiffness=380 epsilon=0.00005
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Resizing - Responsive & Smooth
    // ─────────────────────────────────────────────────────────────────────
    window-resize {
        spring damping-ratio=0.88 stiffness=480 epsilon=0.00005
    }

    // ─────────────────────────────────────────────────────────────────────
    // Config Notification - Snappy Appearance
    // ─────────────────────────────────────────────────────────────────────
    config-notification-open-close {
        spring damping-ratio=0.70 stiffness=1000 epsilon=0.0005
    }

    // ─────────────────────────────────────────────────────────────────────
    // Screenshot UI - Smooth Fade
    // ─────────────────────────────────────────────────────────────────────
    screenshot-ui-open {
        duration-ms 250
        curve "ease-out-cubic"
    }

    // ─────────────────────────────────────────────────────────────────────
    // Overview Mode - Smooth Zoom Effect
    // ─────────────────────────────────────────────────────────────────────
    overview-open-close {
        spring damping-ratio=0.88 stiffness=850 epsilon=0.00005
    }
}

// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                           WINDOW RULES                                   ║
// ║                   Per-Application Window Behavior                        ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

// ─────────────────────────────────────────────────────────────────────
// Terminal Window Settings
// ─────────────────────────────────────────────────────────────────────
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// ─────────────────────────────────────────────────────────────────────
// Picture-in-Picture - Always Floating
// ─────────────────────────────────────────────────────────────────────
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// ─────────────────────────────────────────────────────────────────────
// Password Managers - Screen Capture Protection (Optional)
// ─────────────────────────────────────────────────────────────────────
/-window-rule {
    match app-id=r#"^org\.keepassxc\.KeePassXC$"#
    match app-id=r#"^org\.gnome\.World\.Secrets$"#
    block-out-from "screen-capture"
}

// ─────────────────────────────────────────────────────────────────────
// Global Window Styling
// ─────────────────────────────────────────────────────────────────────
window-rule {
    geometry-corner-radius 0
    clip-to-geometry true
}

// ─────────────────────────────────────────────────────────────────────
// Inactive Window Transparency
// ─────────────────────────────────────────────────────────────────────
window-rule {
    match is-active=false
    opacity 0.92
}

