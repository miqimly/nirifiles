spawn-at-startup "waybar"
spawn-at-startup "mako"
spawn-sh-at-startup "swaybg -i ~/Wallpapers/wall1.jpg"
spawn-sh-at-startup "vicinae server"
spawn-at-startup "walker" "--gapplication-service"

