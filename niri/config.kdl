prefer-no-csd

// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                          INPUT CONFIGURATION                             ║
// ║                     Keyboard, Mouse & Touchpad Settings                  ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

input {
    keyboard {
        repeat-delay 200
        repeat-rate 35
        xkb {
        }
        numlock
    }

    touchpad {
        tap
    }

    mouse {
    }

    trackpoint {
    }

    focus-follows-mouse max-scroll-amount="0%"
}

// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                         OUTPUT CONFIGURATION                             ║
// ║                       Monitor & Display Settings                         ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

output "DP-1" {
    mode "1920x1080@319.998"
    scale 1
    position x=0 y=0
}

output "HDMI-A-1" {
    mode "1920x1080@75"
    scale 1
    position x=1920 y=0
}

// ╔══════════════════════════════════════════════════════════════════════════╗
// ║                                                                          ║
// ║                           LAYOUT SETTINGS                                ║
// ║              Windows, Borders, Focus Rings & Visual Effects              ║
// ║                                                                          ║
// ╚══════════════════════════════════════════════════════════════════════════╝

layout {
    // ─────────────────────────────────────────────────────────────────────
    // Window Gaps & Column Settings
    // ─────────────────────────────────────────────────────────────────────
    gaps 8

    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    // ─────────────────────────────────────────────────────────────────────
    // Focus Ring - Disabled (to avoid double border effect)
    // ─────────────────────────────────────────────────────────────────────
    focus-ring {
        off
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Border - Solid Cyan (Single Layer)
    // ─────────────────────────────────────────────────────────────────────
    border {
        width 2

        // Active: Solid Cyan
        active-color "#00D9FF"

        // Inactive: Transparent
        inactive-color "#00000000"

        // Urgent: Solid Red
        urgent-color "#FF3B30"
    }

    // ─────────────────────────────────────────────────────────────────────
    // Window Shadow - Elegant Depth Effect
    // ─────────────────────────────────────────────────────────────────────
    shadow {
        softness 35
        spread 6
        offset x=0 y=6
        color "#0009"
    }

    struts {
    }
}

